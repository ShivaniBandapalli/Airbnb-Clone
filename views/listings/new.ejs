<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create New Listing ...</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text"class="form-control" name="listing[title]" placeholder="Title name here..." required>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter valid details</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea  required type="text" class="form-control" name="listing[description]" rows="4" cols="30"  placeholder="Describe the place"></textarea>
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter valid details</div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" class="form-control" name="listing[image]" placeholder="Enter image url/link" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input required type="text"class="form-control" name="listing[price]" placeholder="1200">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter valid details</div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="location" class="form-label">Location</label>
                <input required type="text" class="form-control" name="listing[location]" placeholder="Hyderabad,Telangana">
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter valid details</div>
            </div>
        </div>
        <div class="mb-3">
            <label for="country" class="form-label">Country</label>
            <input required type="text"  class="form-control"name="listing[country]" placeholder="India">
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Enter valid details</div>
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br>
        <br>
    </form>
</div>
</div>
</body>
