<% layout("/layouts/boilerplate") %>
<body>
    <style>
      #filters{
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        padding : 0 1rem;
        width: 100%;
        overflow: hidden;
        box-sizing: border-box;
      }
      .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
      }
      .filter:hover{
        opacity: 1;
        cursor: pointer;
      }
      .filter p{
        font-size: 0.8rem;
        margin-top: 2;
      }
      .tax-info{
        display: none;
      }
      .tax-toggle{
        border:1px solid black;
        border-radius: 0.5rem;
        height: 3rem;
        padding: 0.7rem;
        display: flex;
        align-items: center;
        width: 18rem;
      }
      /* Target only horizontal scrollbar */

      .scroll-container::-webkit-scrollbar {
        display: none;
      }
      .scroll-btn {
      background: white;
      border: 1px solid #ccc;
      border-radius: 50%;
      width: 35px;
      height: 35px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 2;
      cursor: pointer;
    }

    .scroll-left {
      left: 0;
    }

    .scroll-right {
      right:0;
    }

    @media (max-width: 768px) {
  .tax-toggle {
    width: 100%;
    margin-left: 0;
    margin-top: 0.5rem;
    display: flex;
    justify-content: flex-start;
  }
  .filters-header{
    flex-direction: column;
    align-items:stretch;
  }
  .scroll-wrapper{
    width: 100%;
    max-width: 100%;
    position: relative;
    overflow: hidden;
  }
}
   
    </style>
    <div id="filters" class="container-fluid px-3 mt-4">
      <!-- scrollable button + fixed content -->
      <div class="d-flex justify-content-between align-items-center flex-wrap filters-header" style="overflow: hidden;">
      <!-- scrollable icons section -->
      <div class="scroll-wrapper position-relative" style="min-width: 0; flex: 1 1 50%;">
      <!-- left arrow  -->
      <div class="scroll-btn scroll-left" onclick="scrollNav(-150)">&#8249;</div>
      <!-- scrollable content -->
      <div id="scrollable" class=" scroll-container d-flex overflow-auto flex-nowrap bg-light rounded px-4 py-2" style="gap: 1.5rem; scroll-behavior: smooth;">
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-gopuram"></i></div>
        <p>Temples</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>
       <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-campground"></i></i></div>
        <p>Camping</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-wheat-awn"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-igloo"></i></div>
        <p>Domes</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-ship"></i></div>
        <p>Boats</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-archway"></i></div>
        <p>Designs</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-table-tennis-paddle-ball"></i></div>
        <p>Play</p>
      </div>
      <div class="filter flex-shrink-0">
        <div ><i class="fa-solid fa-key"></i></div>
        <p>New</p>
      </div>
      <div class="filter flex-shrink-0">
        <div><i class="fa-solid fa-palette"></i></div>
        <p>Creative Spaces</p>
      </div> 
      </div>
      <!-- right arrow  -->
      <div class="scroll-btn scroll-right" onclick="scrollNav(150)">&#8250;</div>
      </div>
       <div class="tax-toggle" style="flex: 0 0 auto; margin-left: 1rem; margin-right: 0.5rem;">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
          <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>&nbsp;&nbsp;
       </div>
      </div>
      </div>
    </div>
   
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing  of allListings){%>
        <a href="/listings/<%=listing._id%>" class="listing-link">
        <div class="card col listing-card">
            <img src="<%= listing.image.url%>" class="card-img-top" alt="listing_image" style="height: 18rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%=listing.title %></b> <br>
               &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
               <i class="tax-info">&nbsp; &nbsp; + 18% GST</i>
            </p>
            </div>
          </div>
        </a>
        <%}%>
    </div>

    <script>
      let taxSwitch = document.getElementById("switchCheckDefault");
      taxSwitch.addEventListener("click",()=>{
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo){
          if(info.style.display!="inline"){
            info.style.display = "inline";
          }else{
            info.style.display = "none";
          }
        }
      });
      const scrollable = document.getElementById('scrollable');
      function scrollNav(x){
        scrollable.scrollBy({left:x,behavior:"smooth"})
      }
    </script>
</body>
